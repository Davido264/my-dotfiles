# vim: ft=dosini
width=300
height=150
padding=20
margin=20
border-size=3
font=Cantarell 11
text-color={{colors.on_surface.default.hex}}
border-color={{colors.primary.default.hex}}
background-color={{colors.surface.default.hex}}
progress-color=over {{colors.primary_container.default.hex}}
default-timeout=15000

max-visible=5
sort=-time
layer=top
anchor=top-center
margin=10,0,0,0
border-radius=10

text-alignment=center
icons=1
max-icon-size=64
icon-path=/usr/share/icons/flattrcolor-dark/:/usr/share/icons/flattrcolor-dark/devices/scalable/
default-timeout=2400
ignore-timeout=0
group-by=none
invisible=0
on-button-middle=exec makoctl menu -n "$id" rofi -dmenu -p 'Select action: '
on-button-right=exec makoctl menu -n "$id" $HOME/Downloads/temp/test.sh

[mode=do-not-disturb]
invisible=1
on-notify=none

[mode=silent]
on-notify=none


